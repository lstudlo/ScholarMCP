{
  "name": "scholar-mcp",
  "version": "1.0.8",
  "description": "MCP Server for researchers",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "scholar-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "public/scholarmcp_banner.png"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:http": "tsx watch src/index.ts --transport=http",
    "dev:stdio": "tsx watch src/index.ts --transport=stdio",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "prepack": "npm run build && node scripts/prepare-package.mjs",
    "pack:dry-run": "npm pack --dry-run",
    "check": "tsc --noEmit",
    "test": "vitest run",
    "pack": "npm run pack:dry-run && npm pack",
    "test:watch": "vitest",
    "release:check": "npm run check && npm run test && npm run pack:dry-run"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@citation-js/core": "^0.7.21",
    "@citation-js/plugin-bibtex": "^0.7.21",
    "@citation-js/plugin-csl": "^0.7.22",
    "@citation-js/plugin-doi": "^0.7.21",
    "@hono/node-server": "^1.19.9",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "cheerio": "^1.2.0",
    "dotenv": "^17.2.3",
    "hono": "^4.12.1",
    "pdf-parse": "^2.4.5",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "homepage": "https://scholar-mcp.lstudlo.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lstudlo/ScholarMCP.git"
  },
  "bugs": {
    "url": "https://github.com/lstudlo/ScholarMCP/issues"
  }
}
