{
  "name": "scholar-mcp-workspace",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter scholar-mcp dev",
    "dev:http": "pnpm --filter scholar-mcp dev:http",
    "dev:stdio": "pnpm --filter scholar-mcp dev:stdio",
    "build": "pnpm --filter scholar-mcp build",
    "check": "pnpm --filter scholar-mcp check",
    "test": "pnpm --filter scholar-mcp test",
    "test:watch": "pnpm --filter scholar-mcp test:watch",
    "pack:dry-run": "pnpm --filter scholar-mcp pack:dry-run",
    "pack": "pnpm --filter scholar-mcp pack",
    "release:check": "pnpm --filter scholar-mcp release:check",
    "release": "node scripts/release.mjs",
    "docs:dev": "pnpm --dir apps/docs dev",
    "docs:build": "pnpm --dir apps/docs build",
    "docs:check": "pnpm --dir apps/docs check",
    "docs:sync-api": "pnpm --dir apps/docs sync:api",
    "docs:sync-releases": "pnpm --dir apps/docs sync:releases",
    "docs:sync": "pnpm --dir apps/docs sync:generated"
  },
  "devDependencies": {
    "typescript": "5.9.3"
  }
}
