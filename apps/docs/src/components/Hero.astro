---
const { data } = Astro.locals.starlightRoute.entry;
const { title = data.title, tagline, actions = [] } = data.hero || {};
---

<section class="docs-hero">
  <p class="text-[11px] tracking-[0.18em] text-zinc-500 uppercase">ScholarMCP Docs</p>

  <div class="mt-3 max-w-4xl">
    <h1 id="_top" data-page-title class="font-serif text-4xl leading-tight tracking-tight text-zinc-950 sm:text-5xl dark:text-zinc-100" set:html={title} />
    {tagline && (
      <p class="mt-4 max-w-2xl text-sm leading-6 text-zinc-600 dark:text-zinc-300" set:html={tagline} />
    )}
  </div>

  {actions.length > 0 && (
    <div class="mt-7 flex flex-wrap gap-2">
      {
        actions.map(({ attrs = {}, icon, link, text, variant }) => (
          <a
            href={link}
            {...attrs}
            class:list={[
              'inline-flex items-center gap-2 rounded-full px-4 py-2 text-xs tracking-[0.16em] uppercase transition',
              variant === 'minimal'
                ? 'border border-zinc-300/80 hover:bg-zinc-100 dark:border-zinc-700 dark:hover:bg-zinc-900'
                : 'border border-[var(--accent)] bg-[var(--accent)] text-white hover:opacity-90 dark:text-zinc-950'
            ]}
          >
            <span>{text}</span>
            {icon?.html ? <Fragment set:html={icon.html} /> : null}
          </a>
        ))
      }
    </div>
  )}

  <div class="mt-6 flex flex-wrap gap-2">
    <span class="rounded-full border border-zinc-300/80 px-3 py-1 text-xs font-mono dark:border-zinc-700">MCP Server</span>
    <span class="rounded-full border border-zinc-300/80 px-3 py-1 text-xs font-mono dark:border-zinc-700">Literature Research</span>
    <span class="rounded-full border border-zinc-300/80 px-3 py-1 text-xs font-mono dark:border-zinc-700">Agent Workflows</span>
  </div>
</section>

<style>
  @layer starlight.core {
    .docs-hero :global(svg) {
      width: 0.9rem;
      height: 0.9rem;
    }
  }
</style>
