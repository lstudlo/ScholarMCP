---
const { siteTitleHref, siteTitle } = Astro.locals.starlightRoute;
---

<a href={siteTitleHref} class="group min-w-0 no-underline" translate="no">
  <div class="flex items-center gap-2 sm:gap-3 group-hover:opacity-80">
    <div class="truncate font-serif text-xl leading-none tracking-tight text-zinc-950 sm:text-2xl dark:text-zinc-100">
      {siteTitle}
    </div>
    <span class="text-[10px] tracking-[0.14em] text-[var(--accent)] sm:text-[11px]">by</span>
    <img src="/lstudlo_logo.svg" alt="lstudlo" class="lstudlo-mark h-3.5 shrink-0" />
  </div>
</a>

<style>
  @layer starlight.core {
    a {
      display: inline-flex;
      align-items: center;
      min-width: 0;
      color: inherit;
      text-decoration: none;
      transition: opacity 160ms ease;
    }

    :root[data-theme='dark'] .lstudlo-mark {
      filter: invert(1);
    }

    @media (prefers-reduced-motion: reduce) {
      a {
        transition: none;
      }
    }
  }
</style>
