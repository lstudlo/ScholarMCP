---
const { entry, id } = Astro.locals.starlightRoute;

const pathParts = id.split('/').filter(Boolean);
const section = pathParts[0] ? pathParts[0].replace(/-/g, ' ') : 'documentation';
const leafId = pathParts.at(-1) ?? id;
---

<section class="docs-page-title">
  <div class="flex flex-wrap items-center gap-2">
    <span class="text-[11px] tracking-[0.18em] text-zinc-500 uppercase">{section}</span>
    <span class="rounded-full border border-zinc-300/80 px-2.5 py-1 font-mono text-[11px] dark:border-zinc-700">
      {leafId}
    </span>
  </div>

  <h1 id="_top" class="mt-3 font-serif text-4xl leading-tight tracking-tight text-zinc-950 sm:text-5xl dark:text-zinc-100">
    {entry.data.title}
  </h1>

  {entry.data.description && (
    <p class="mt-4 max-w-3xl text-sm leading-6 text-zinc-600 dark:text-zinc-300">{entry.data.description}</p>
  )}
</section>
