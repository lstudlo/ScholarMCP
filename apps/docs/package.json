{
  "name": "scholar-mcp-docs",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "sync:api": "node ../../scripts/generate-docs-api.mjs",
    "sync:releases": "node ../../scripts/generate-docs-releases.mjs",
    "sync:generated": "pnpm run sync:api && pnpm run sync:releases",
    "dev": "pnpm run sync:generated && astro dev",
    "build": "pnpm run sync:generated && astro check && astro build",
    "check": "pnpm run sync:generated && astro check",
    "preview": "astro preview",
    "cf:pages:deploy": "wrangler pages deploy ./dist --project-name scholar-mcp-docs",
    "cf:pages:deploy:preview": "wrangler pages deploy ./dist --project-name scholar-mcp-docs --branch ${WORKERS_CI_BRANCH:-preview}",
    "cf:pages:deploy:ci": "wrangler pages deploy ./dist --project-name scholar-mcp-docs",
    "cf:pages:deploy:preview:ci": "wrangler pages deploy ./dist --project-name scholar-mcp-docs --branch ${WORKERS_CI_BRANCH:-preview}"
  },
  "dependencies": {
    "@astrojs/starlight": "latest",
    "astro": "latest",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "typescript": "^5.9.3",
    "wrangler": "^4.67.0"
  }
}
